<div class="page-header">
  <h1> <%= Course.find_by(id: @course.id).title %>s </h1>
</div>

<dl class="dl-horizontal">
  <dt>Department</dt>
  <dd><%= @course.department %></dd>

  <dt>Number</dt>
  <dd><%= @course.number %></dd>

  <dt>Title</dt>
  <dd><%= @course.title %></dd>

  <p></p>
    <% meeting = Meeting.where(:course_id => @course.id) %>
    <% meeting.each do |meet| %>
      <dt> Meeting </dt>
      <dd> <%= link_to(meet.held_on, meeting_url(meet.id) ) %> </dd>
    <% end %>

</dl>
